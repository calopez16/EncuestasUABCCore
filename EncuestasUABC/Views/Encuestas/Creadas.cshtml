@using EncuestasUABC.Models;
@using EncuestasUABC.Utilidades;
@using EncuestasUABC.Enumerador;
@model EncuestasUABC.Models.PaginacionViewModel<List<Encuesta>>

@{
    ViewData["Title"] = "Encuestas Creadas";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script type="text/javascript" src="~/lib/DataTables/datatables.min.js"></script>
<link href="~/lib/DataTables/datatables.min.css" rel="stylesheet" />
<div class="ibox p-4">
    <div class="ibox-head">
        <div class="ibox-title">
            <h1 class="page-title">@ViewData["Title"]</h1>
        </div>
        <button class="btn btn-primary" data-toggle="modal" data-target="#modal_CrearEncuesta">Agregar</button>
    </div>
    <div class="ibox-body">
        @foreach (var encuesta in Model.Result)
        {
            <div class="card mt-2 box-shadow">
                <div class="card-header">
                    <div class="row">
                        <div class="col-12 col-md-8 text-center text-md-left">
                            <h5 class="m-0"> @Html.Raw(encuesta.Nombre)</h5>
                            <small class="text-muted"><strong>Fecha de creación:</strong> @encuesta.Fecha.ToString("dd/MM/yyyy hh:mm:ss tt")</small>
                        </div>
                        <div class="col-12 col-md-4 mt-2 d-flex justify-content-center justify-content-md-end ">
                            <h5 class="mb-0 text-center">
                                <button class="btn btn-link" data-toggle="collapse" data-target="#VerDetalles_@encuesta.Id" aria-expanded="true" aria-controls="collapseOne">
                                    Ver descripción
                                </button>
                            </h5>
                            <a asp-action="Editar" asp-route-id="@encuesta.Id" class="btn btn-primary m-1">
                                <i class="fa fa-edit"></i>
                            </a>
                            <a href="" class="btn btn-danger m-1">
                                <i class="fa fa-trash"></i>
                            </a>
                            <a href="" class="btn btn-primary m-1">
                                <i class="fa fa-share"></i>
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div id="VerDetalles_@encuesta.Id" class="collapse">
                        <div class="card-body">
                            @Html.Raw(encuesta.Descripcion)
                        </div>
                        <hr />
                    </div>
                    <div class="d-flex justify-content-between align-items-center">
                        <h6>@encuesta.Carrera.Nombre</h6>
                        @if (encuesta.EstatusEncuestaId == (int)EstatusEncuesta.ACTIVA)
                        {
                            <span class="badge badge-success">ACTIVA</span>
                        }
                        else
                        {
                            <span class="badge badge-default">INACTIVA</span>
                        }
                    </div>
                </div>
            </div>
        }
        <div class="row d-flex justify-content-end mt-4">
            <div class="col-6 text-right">
                <div class="btn-group m-b-10 btn-rounded">
                    @if (Model.NumeroPagina > 1)
                    {
                        <a class="btn btn-primary" href="@Url.Action("Creadas","Encuestas", new { pagina=(Model.NumeroPagina - 1)})"><i class="fa fa-arrow-left"></i> Anterior</a>
                    }
                    else
                    {
                        <button class="btn btn-primary" disabled><i class="fa fa-arrow-left"></i> Anterior</button>
                    }

                    @if (Model.NumeroPagina < Model.TotalPaginas)
                    {
                        <a class="btn btn-primary" href="@Url.Action("Creadas","Encuestas",new { pagina=(Model.NumeroPagina + 1) })">Siguiente <i class="fa fa-arrow-right"></i></a>
                    }
                    else
                    {
                        <button class="btn btn-primary" disabled>Siguiente <i class="fa fa-arrow-right"></i></button>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<partial name="~/Views/Encuestas/PartialViews/_ModalCrearEncuesta.cshtml" />

<script type="text/javascript">
    var enum_EstatusEncuesta=@(EnumHelper.EnumToString<EstatusEncuesta>())
</script>
<script src="~/js/Encuestas/Creadas.js"></script>

