@using EncuestasUABC.Models;
@using EncuestasUABC.Enumerador;
@model Encuesta
@{
    Layout = null;
}
<link rel="stylesheet" type="text/css" href="~/lib/summernote/dist/summernote.css" />
<div class="modal fade" id="modal_EditarNombreDescripcion" tabindex="-1" role="dialog" aria-labelledby="modal_EditarNombreDescripcion" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form asp-action="EditarNombreDescripcion" class="modal-content" id="form_EditarNombreDescripcion">
            <input hidden asp-for="Id" />
            <div class="modal-header">
                <h5 class="modal-title">Editar información general</h5>
                <span type="button" class="btn" data-dismiss="modal">
                    <i class="fa fa-times"></i>
                </span>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="col-md-10">
                        <label class="control-label">Nombre</label>
                        <input asp-for="Nombre" class="form-control" id="txt_Nombre" />
                    </div>
                    <div class="col-md-2 align-self-center pt-4">
                        <label class="ui-checkbox ui-checkbox-primary mt-1">
                            @if (Model != null)
                                @if (Model.EstatusEncuestaId == (int)EncuestasUABC.Enumerador.EstatusEncuesta.ACTIVA)
                                {
                                    <input name="encuestaEstatus" type="checkbox" value="true" checked>
                                }
                                else
                                {
                                    <input name="encuestaEstatus" type="checkbox" value="true">
                                }
                            <span class="input-span"></span> Activa
                        </label>
                    </div>
                </div>
                <div class="form-group mt-4">
                    <label class="control-label">Descripción</label>
                    <textarea asp-for="Descripcion" class="form-control" id="txtArea_Descripcion"></textarea>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-primary" id="btn_GuardarNombreDescripcion">Guardar</button>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $('#txtArea_Descripcion').summernote({
            toolbar: [
                ['undo', ['undo', 'redo']],
                ['style', ['bold', 'italic', 'underline', 'clear']],
                ['fontsize', ['fontsize']],
                ['para', ['ul', 'ol', 'paragraph']],
                ['height', ['height']],
                ['table', ['table']],
                ['fullscreen', ['fullscreen']]
            ],
            height: 300,
            lang: "es-ES"
        });
    });
</script>

<script type="text/javascript" src="~/lib/summernote/dist/summernote.js"></script>
