@{ 
    Layout = null;
}

<!-- Modal -->
<div class="modal fade" id="modal_EncuestaEliminar" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-action="Delete" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Encuesta</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input hidden type="text" name="id" id="text_EncuestaEliminar"/>
                ¿Estas seguro de eliminar la encuesta <strong><span id="span_NombreEncuesta"></span></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-raised mr-2" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success btn-raised">Confirmar</button>
            </div>
        </form>
    </div>
</div>
