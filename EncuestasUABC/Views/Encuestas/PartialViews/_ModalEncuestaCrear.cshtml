@model EncuestasUABC.Models.ViewModels.EncuestaViewModel
@{
    Layout = null;
}

<div class="modal fade" id="modal_EncuestaCrear" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg" role="document">
        <form asp-action="Crear" class="modal-content" id="form_CrearEncuesta">
            <div class="modal-header">
                <h4 class="modal-title">Crear Encuesta</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="form-row">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Nombre" class="bmd-label-floating"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="CarreraId" class="bmd-label-floating"></label>
                            <select asp-for="CarreraId" class="form-control select_Carrera">
                                <option value="">Seleccionar</option>
                            </select>
                            <span asp-validation-for="CarreraId"></span>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="form-group">
                            <label asp-for="Descripcion" class="bmd-label-floating"></label>
                            <textarea asp-for="Descripcion" class="form-control" rows="10"></textarea>
                            <span asp-validation-for="Descripcion"></span>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-raised mr-2" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-success btn-raised">Confirmar</button>
            </div>
        </form>
    </div>
</div>
<script type="text/javascript">
   
</script>

