@{
    ViewData["Title"] = "Usuarios";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card">
    <div class="card-header">
        <a asp-action="Create" class="btn btn-primary bmd-btn-fab float-right" data-toggle="tooltip" data-placement="bottom" title="Agregar usuario">
            <i class="material-icons">add</i>
        </a>
        <h1 class="mt-md-2">@ViewData["Title"]</h1>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-hover" id="table_Usuarios">
                <thead>
                    <tr>
                        <th>Correo</th>
                        <th>Nombre</th>
                        <th>Apellido Paterno</th>
                        <th>Apellido Materno</th>
                        <th>Rol</th>
                        <th style="width:40px"></th>
                        <th style="width:40px"></th>
                    </tr>
                </thead>
                <tbody>
                </tbody>
            </table>
        </div>
    </div>
</div>
<partial name="~/Views/Usuarios/PartialViews/_ModalEliminarUsuario.cshtml" />
<script type="text/javascript" src="~/js/Usuarios/Index.js"></script>

