@using EncuestasUABC.ViewModels;
@model ResetearContrasenaViewModel;
@{
    Layout = null;
}
<!-- Modal -->
<div class="modal fade" id="modal-CambiarContrasena" tabindex="-1" role="dialog" aria-labelledby="modal-CambiarContrasena" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-action="ResetearContrasena" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Cambiar Contraseña</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input type="hidden" asp-for="UserName" />
                <div class="row">
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="Contrasena" class="bmd-label-floating"></label>
                            <input asp-for="Contrasena" class="form-control">
                            <span asp-validation-for="Contrasena"></span>
                        </div>
                    </div>
                    <div class="col-12">
                        <div class="form-group">
                            <label asp-for="ConfirmarContrasena" class="bmd-label-floating"></label>
                            <input asp-for="ConfirmarContrasena" class="form-control" id="txt_confirmarContrasena" type="password">
                            <span asp-validation-for="ConfirmarContrasena"></span>
                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-danger btn-raised">
                    Cancelar
                </button>
                <button type="submit" class="btn btn-success btn-raised ml-2">
                    Confirmar
                </button>
            </div>
        </form>
    </div>
</div>


