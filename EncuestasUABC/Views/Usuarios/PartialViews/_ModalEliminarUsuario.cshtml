@{ 
    Layout = null;
}

<!-- Modal -->
<div class="modal fade" id="modal_EliminarUsuario" tabindex="-1" role="dialog" aria-labelledby="modal_EliminarUsuario" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-action="Delete" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input hidden type="text" name="email" id="text_emailEliminar"/>
                ¿Estas seguro de eliminar al usuario <strong><span id="span_EliminarUsuario"></span></strong>?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                <button type="submit" class="btn btn-danger">Eliminar</button>
            </div>
        </form>
    </div>
</div>
