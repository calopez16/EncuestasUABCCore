@{
    Layout = null;
}

<!-- Modal -->
<div class="modal fade" id="modal_EliminarUsuario" tabindex="-1" role="dialog" aria-labelledby="modal_EliminarUsuario" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <form asp-action="Delete" class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Eliminar Usuario</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <input hidden type="text" name="email" id="text_emailEliminar" />
                <h5>¿Seguro(a) de eliminar al usuario <strong><span id="span_EliminarUsuario"></span></strong>?</h5>
            </div>
            <div class="modal-footer">
                <span class="btn-group-sm">
                    <button type="button" class="btn btn-danger bmd-btn-fab btn-raised mr-2" data-dismiss="modal" data-toggle="tooltip" data-placement="bottom" title="Cancelar">
                        <i class="material-icons">close</i>
                    </button>
                </span>
                <span class="btn-group-sm ml-1">
                    <button type="submit" class="btn btn-success bmd-btn-fab btn-raised" data-toggle="tooltip" data-placement="bottom" title="Aceptar">
                        <i class="material-icons">check</i>
                    </button>
                </span>
            </div>
        </form>
    </div>
</div>
